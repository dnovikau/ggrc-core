<form action="javascript://">
  <div class="row-fluid">
    <div class="span12">
      <label>
        Object for review
        <i class="fa fa-question-circle" rel="tooltip" title="Title and description of the object"></i>
      </label>
      <h3>{{#using object=instance.original_object}}{{object.title}}{{/using}}</h3>
      {{#using object=instance.original_object}}
        {{{object.description}}}
      {{/using}}
    </div>
  </div>
  <br>
  <div class="row-fluid">
    <div class="span8">
      <label>
        Assign reviewer
        <span class="required">*</span>
        <i class="fa fa-question-circle" rel="tooltip" title="Reviewer to assign"></i>
      </label>
      <div class="people-autocomplete">
        {{^if_config_exist 'external_services.Person'}}
          <input
            tabindex="2"
            type="text"
            name="contact.email"
            null-if-empty="true"
            class="span11 search-icon required"
            value="{{firstnonempty instance.contact.email}}"
            placeholder="Find reviewer"
            data-lookup="Person">
        {{else}}
          <inline-autocomplete-wrapper
            {instance}="instance"
            {path}="'contact'"
            {display-prop}="'email'"
            {text-value}="instance.contact.email">
            <external-data-autocomplete
              {type}="'Person'"
              {placeholder}="'Find reviewer'"
              (item-selected)="setItem(%event.selectedItem)"
              (criteria-changed)="setItem(%event.value)"
              {auto-clean}="false"
              {min-length}="2"
              {search-criteria}="textValue">
            </external-data-autocomplete>
          </inline-autocomplete-wrapper>
        {{/if_config_exist}}
      </div>
    </div>
    <div class="span4">
      <datepicker
        label="Due date"
        helptext="Set review due date"
        {name}="'end_date'"
        set-min-date="{{date_today}}"
        deny-input="true"
        no-weekends="true"
        required="true"
      >
      </datepicker>
    </div>
  </div>
</form>
